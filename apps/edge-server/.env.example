# STC AI-VAP Edge Server Configuration
# Copy this file to .env and adjust the values for your site

# Networking
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false

# Cloud control-plane connection
CLOUD_API_URL=https://cloud.example.com
CLOUD_API_KEY=
LICENSE_KEY=XXXX-XXXX-XXXX-XXXX

# Sync + heartbeat
SYNC_INTERVAL=30
HEARTBEAT_INTERVAL=60

# Storage + logging
DATA_DIR=data
LOG_DIR=logs
LOG_LEVEL=INFO

# AI processing
MAX_CAMERAS=16
PROCESSING_FPS=5
FACE_CONFIDENCE=0.6
OBJECT_CONFIDENCE=0.5
FIRE_CONFIDENCE=0.7

# Optional integrations
MQTT_BROKER=
MQTT_PORT=1883
